{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "LunaCloudFrontOriginAccessIdentity": {
            "Type": "AWS::CloudFront::CloudFrontOriginAccessIdentity",
            "Properties": {
                "CloudFrontOriginAccessIdentityConfig": {
                    "Comment": {
                        "Fn::Join": [
                            "",
                            [
                                "Luna - Origin Access Identity for ",
                                {
                                    "Ref": "AWS::StackName"
                                }
                            ]
                        ]
                    }
                }
            }
        },
        "LunaBucket": {
            "Type": "AWS::S3::Bucket"
        },
        "LunaBucketPolicy": {
            "Type": "AWS::S3::BucketPolicy",
            "Properties": {
                "PolicyDocument": {
                    "Id": "CloudFrontOriginAccessIdentityReadPolicy",
                    "Statement": [
                        {
                            "Sid": "CloudFrontOriginAccessIdentityAllowGetBucketObjects",
                            "Effect": "Allow",
                            "Principal": {
                                "AWS": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "arn:aws:iam::cloudfront:user/CloudFront Origin Access Identity ",
                                            {
                                                "Ref": "LunaCloudFrontOriginAccessIdentity"
                                            }
                                        ]
                                    ]
                                }
                            },
                            "Action": "s3:GetObject",
                            "Resource": {
                                "Fn::Join": [
                                    "",
                                    [
                                        {
                                            "Fn::GetAtt": [
                                                "LunaBucket",
                                                "Arn"
                                            ]
                                        },
                                        "/*"
                                    ]
                                ]
                            }
                        }
                    ]
                },
                "Bucket": {
                    "Ref": "LunaBucket"
                }
            },
            "DependsOn": [
                "LunaBucket",
                "LunaCloudFrontOriginAccessIdentity"
            ]
        }
    }
}
